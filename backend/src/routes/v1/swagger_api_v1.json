                    },
                    "subAnswers": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/PublicAnswer"
                        }
                    }
                }
            },
            "Question": {
                "properties": {
                    "id": {
                        "type": "string",
                        "format": "uuid"
                    },
                    "title": {
                        "type": "string",
                        "example": "Title of the sub-question"
                    },
                    "description": {
                        "type": "string",
                        "example": "Description of the sub-question"
                    },
                    "pollId": {
                        "type": "string",
                        "format": "uuid"
                    },
                    "type": {
                        "$ref": "#/components/schemas/QuestionType"
